<%= form_for(@portfolio_item) do |form| %>
<div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :portfolio_title, class:'form-control' %>
    <br>
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :portfolio_title, class:'form-control' %>
  </div>
  <div class="form-group">
    <label class="btn btn-primary">
      Upload a main image file <%= form.file_field :main_image, style:"display:none;" %>
    </label>
  </div>
  <div class="form-group">
    <label class="btn btn-primary">
      Upload a thumb image file <%= form.file_field :thumb_image, style:"display:none;" %>
    </label>
  </div>
  <div class="form-group">
    
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :portfolio_body, class:'form-control' %>
  </div>
  <h3>Technologies Used:</h3>
  <div>
    <%= form.fields_for :techonologies do |techonologies_form| %>
      <div class="form-group">
           <%= techonologies_form.label :name %>
           <%= techonologies_form.text_field :name, class:'form-control' %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-success'%>
  </div>
<% end %>