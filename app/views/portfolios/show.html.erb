<div class="portfolio-container">
  <div class="container">
    <div class="row">
      <div class="col-md-7" style="max-height:500px;overflow:hidden;">
        <img src="<%= portfolio_img(@portfolio_item.main_image,'main') %>" style="max-width:100%;max-height:500px;overflow:hidden;">
      </div>
      <div class="col-md-5">
        <h1><%= @portfolio_item.title %></h1>
        <hr>
        <h4><%= @portfolio_item.subtitle %></h4>
        <p><%= @portfolio_item.body %></p>
        <h2>Technologies Used</h2>
        <% @portfolio_item.techonologies.each do |t| %>
        <p><%= t.name %></p>
        <% end %>
        <% if logged_in?(:site_admin) %>
        <div class="col-md-12">
          <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: "btn btn-warning" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

