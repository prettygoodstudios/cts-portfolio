<div class="app-card-container">
  <div class="card">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
          <center><%= image_tag "circular_logo.png", width: "100%", alt:"Profile Image", style:"border-radius:50%;"%></center> 
          <div class="skills">
            <% @skills.each do |skill| %>
              <div class="skill">
                <h4><%= skill.title %></h4>
                <div class="progress">
                  <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" aria-valuenow="<%= skill.percent_utilized %>" aria-valuemax="100" style="width: <%= skill.percent_utilized %>%"0>
                    
                  </div>
                </div>
              </div>
            <% end %>
          </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
            <p><span class="display-4">Hello World</span> I like making things.</p>
             
              <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#jobs" aria-expanded="false" aria-controler="jobs">
                Job History
              </button>
            
              <p>
                <div class="collapse" id="jobs">
                  <div class="card card-block">
                    <p>CSR AT DOMINO'S</p>
                  </div>
                </div>
              </p>
              <p>
              <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#projects" aria-expanded="false" aria-controler="projects">
                Projects
              </button>
              <p>
                <div class="collapse" id="projects">
                  <div class="card card-block">
                    <p>Ben Sutorius</p>
                  </div>
                </div>
              </p>
      </div>
    </div>
  </div>
</div>