<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
    <style>
      body{
        background: url('https://www.tesla.com/tesla_theme/assets/img/models/slideshow/Front_Grill-1440.jpg?20170420');
        background-repeat: no-repeat;
        background-size:cover;
        margin:0;
        padding:0;
        font-family:"Quicksand", sans-serif !important;
        color:white;
        overflow:hidden;
      }
      header{
        text-align:left;
        font-size:20px;
        width:100%;
        padding:30px;
        color:white;
      }
      .branding{
        font-size:50px;
        margin-right:100px;
      }
      ul{
        list-style:none;
        display:inline;
        color:white;
      }
      li{
        display:inline;
        margin: 20px;
      }
      footer{
        position:fixed;
        bottom:0;
        padding:30px;
        width:100%;
        color:white;
        text-align:center;
      }
      .popup{
        position:fixed;
        top:30%;
        width:100%;
        text-align:center;
        padding:30px;
      }
      h1{
        font-size:2.5em;
      }
      .btn{
        color:white;
        background-color:black;
        font-size:1.5em;
        padding:10px;
        border: 1px solid transparent;
        margin: 30px;
      }
      .btn:hover{
        border: 1px solid white;
      }
