<div class="">
  <div class="">
    <center><h1>Contact</h1></center>
    <hr>
    <div class="row">
      <div class="col-md-6" style="padding:50px;">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3043.5024077778844!2d-111.68040764862053!3d40.28680237927925!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x874d9a9760838961%3A0x7f0a4ef908f2a906!2s557+S+700+E%2C+Orem%2C+UT+84097!5e0!3m2!1sen!2sus!4v1498576782299" width="100%" height="300px" frameborder="0" style="border:0" allowfullscreen></iframe>
      </div>
      <div class="col-md-6" style="padding-top:50px;text-align:left;">
          <!-- Helper Methods that Help Parse Numbers -->
        <h3>Phone</h3>
        <p><%= number_to_phone "3853094385" %></p>
        <h3>Email</h3>
        <p>prettygoodstudiosapps@gmail.com</p>
        <h3>Contact Form</h3>
        <% if logged_in?(:site_admin) %>
          <%= link_to "View Offers", offers_path, class: 'btn btn-success' %>
        <% end %>
        <form action="/sendemail" method = "post" style="margin-bottom:150px;">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <div class='form-group'>
            <label id='email'>Email</label>
            <input type="email" class='form-control' id='email' name="email">
          </div>
          <div class='form-group'>
            <label id='title'>Title</label>
            <input type='text' class='form-control' id='title' name="title">
          </div>
          <div class='form-group'>
            <label id='content'>Content</label>
            <textarea id='content' class='form-control' name="content"></textarea>
          </div>
          <input type='submit' value='Send' class='btn btn-success'>
        </form>
      </div>
    </div>
  </div>
</div>

