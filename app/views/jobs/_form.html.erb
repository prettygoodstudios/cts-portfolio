<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
      <% job.errors.full_messages.each do |error| %>
        <%= alert_generator error %>
      <% end %>
  <% end %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :job_title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :job_description, class: "form-control" %>
  </div>
  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary"%>
  </div>
<% end %>
<br>
<%= link_to "Back", jobs_path, class: "btn btn-danger" %>