<style>
  .nav-link{
    font-family: 'Slabo 27px', serif !important;
    text-align: center;
    font-size: 25px !important;
    color:#292b2c !important;
  }
  .nav-link.active{
    color:#95a5a6 !important;
  }
  .navbar-brand{
    font-family: 'Slabo 27px', serif !important;
    text-align: center;
    font-size: 2em !important;
  }
  .user-info>img{
   width:35px !important;
   height:35px !important;
  }
  .user-info{
    font-size:25px !important;
  }
  .dropdown-container {
    position: relative;
  }
  
  .nav-link{
    padding: 0.0em 2em 0.0em 2em;
  }
  .profile-menu{
    position: absolute;
    top: 130%; /* Bottom of button */
    right: 0px;
    border-radius: 0px 0px 10px 10px !important;
    overflow: hidden;
    box-shadow: none !important;
    margin-left: 0px; /* More to the left */
  }
  .profile-menu>li{
    background: #F7F7F7 !important;
  }
  .dropdown-item{
    background-color: #F7F7F7 !important;
  }
  .dropdown-item:hover{
    background-color: #B8B3B3 !important;
  }
  .preventHover:hover{
    background-color: #F7F7F7 !important;
  }
  .navbar-toggler{
    border: none;
  }
  .navbar-toggler:focus,
  .navbar-toggler:active {
      outline: 0;
  }
  
  .navbar-toggler span {
     display: block;
     background-color: #444;
     height: 3px;
     width: 25px;
     margin-top: 8px;
     margin-bottom: 8px;
     -webkit-transform: rotate(0deg);
     -moz-transform: rotate(0deg);
     -o-transform: rotate(0deg);
     transform: rotate(0deg);
     position: relative;
     left: 0;
     opacity: 1;
  }
  
  .navbar-toggler span:nth-child(1),
  .navbar-toggler span:nth-child(3) {
     -webkit-transition: transform .35s ease-in-out;
     -moz-transition: transform .35s ease-in-out;
     -o-transition: transform .35s ease-in-out;
     transition: transform .35s ease-in-out;
  }
  
  .navbar-toggler:not(.collapsed) span:nth-child(1) {
      position: absolute;
      left: 12px;
      top: 10px;
      -webkit-transform: rotate(135deg);
      -moz-transform: rotate(135deg);
      -o-transform: rotate(135deg);
      transform: rotate(135deg);
      opacity: 0.9;
  }
  
  .navbar-toggler:not(.collapsed) span:nth-child(2) {
      height: 12px;
      visibility: hidden;
      background-color: transparent;
  }
  
  .navbar-toggler:not(.collapsed) span:nth-child(3) {
      position: absolute;
      left: 12px;
      top: 10px;
      -webkit-transform: rotate(-135deg);
      -moz-transform: rotate(-135deg);
      -o-transform: rotate(-135deg);
      transform: rotate(-135deg);
      opacity: 0.9;
  }
</style>
<nav class="navbar navbar-toggleable-md navbar-light bg-faded blog-nav" style="position: fixed;width: 100%;z-index:999;">
  <button class="navbar-toggler navbar-toggler-right collapsed" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle nav">
    <span></span>
    <span></span>
    <span></span>
  </button>
  <div class="container">
    <% branding = "#{ image_tag "circular_logo.png", width:"50px",height:"auto" } <span class='brand-name'>Miguel Rust</span>" %>
    <%= link_to branding.html_safe, root_path, class:"navbar-brand" %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <%= nav_helper 'nav-link', 'li' %>
        <%= login_helper 'user-info nav-link' if current_user.is_a?(GuestUser)%>
      </ul>
      <ul class="navbar-nav mr-auto navbar-right">
        <%= login_helper 'user-info nav-link' if !current_user.is_a?(GuestUser)%>
      </ul>
    </div>
  </div>
</nav>
<div style="height:75px">
  
</div>
<script>
  window.onresize = function(){
    refresh2();
  };
  $(document).ready(function(){
    refresh2();
  });
  
  function refresh2(){
    if (window.innerWidth < 339){
      $(".brand-name").html("MR");
    }else{
      $(".brand-name").html("Miguel Rust");
    }
    if (window.innerWidth < 992){
      $(".profile-menu").css("position","relative");
    }else{
      $(".profile-menu").css("position","absolute");
    }
  }
  $(".dropdown-item").hover(function(){
    if (window.innerWidth < 992){
      $(".dropdown-item").addClass("preventHover");
    }else{
      $(".dropdown-item").removeClass("preventHover");
    }
  });
  $(".user-info").click(function(){
    if($(".fa-caret-down").length > 0 ){
      $(".fa-caret-down").removeClass("fa-caret-down").addClass("fa-caret-up");
    }else{
      $(".fa-caret-up").addClass("fa-caret-down").removeClass("fa-caret-up");
    }
  });
</script>